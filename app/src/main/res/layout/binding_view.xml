<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
    android:text="@string/rxbinding_tips"/>
    <EditText android:id="@+id/edittext_tips" android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

    <Button android:id="@+id/btn_click" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="连续点击防止误触"/>

    <TextView android:id="@+id/binding_result" android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
</LinearLayout>