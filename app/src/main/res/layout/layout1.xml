<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout android:id="@+id/layout1"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">


        <TextView android:id="@+id/argument" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
        <Button android:id="@+id/analyze" android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="开始"/>

        <Button android:id="@+id/connect" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始"
                android:visibility="gone"/>
        <TextView android:id="@+id/result" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>